      start: 
             LOAD s1, 00         ; MSB
             LOAD s2, 00
             LOAD s3, 00
             LOAD s4, 00         ; LSB
             LOAD s5, 00         ; Selected
             ; s6 accumulator
             LOAD s7, 00         ; pstate
             ; input 00 : XXXT_LRUD
       main: 
             LOAD s7, s0
             INPUT s0, 00
             ; as long as there's no input change do nothing
             LOAD s6, s0
             XOR s6, s7
             TEST s6, FF
             JUMP Z, main
             COMPARE s0, 01      ; 0000_0001
             JUMP Z, decrement
             COMPARE s0, 02      ; 0000_0010
             JUMP Z, increment
             COMPARE s0, 04      ; 0000_0100
             JUMP Z, right
             COMPARE s0, 18      ; 0001_1000
             JUMP Z, switch_mode
             COMPARE s0, 08      ; 0000_1000
             JUMP Z, left
             JUMP main
switch_mode: 
             AND s5, 10
             XOR s5, 10
             OUTPUT s5, 10
             JUMP main
       left: 
             ADD s5, 03
             AND s5, 13
             OUTPUT s5, 10
             JUMP main
      right: 
             ADD s5, 01
             AND s5, 13          ; 0011 - 3
             OUTPUT s5, 10
             JUMP main
  increment: 
             TEST s5, 10
             JUMP Z, main
             LOAD s6, 01
             JUMP apply
  decrement: 
             TEST s5, 10
             JUMP Z, main
             LOAD s6, 0F
      apply: 
             COMPARE s5, 11
             JUMP Z, byte1
             COMPARE s5, 12
             JUMP Z, byte2
             COMPARE s5, 13
             JUMP Z, byte3
      byte0: 
             ADD s1, s6
             OUTPUT s1, 01
             JUMP main
      byte1: 
             ADD s2, s6
             OUTPUT s2, 02
             JUMP main
      byte2: 
             ADD s3, s6
             OUTPUT s3, 04
             JUMP main
      byte3: 
             ADD s4, s6
             OUTPUT s4, 08
             JUMP main
